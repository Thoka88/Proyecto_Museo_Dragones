<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.uisil.proyecto_museo_dragones.controllers.Vista_AdminController">

    <!-- Menú lateral -->
    <left>
        <VBox spacing="5" prefWidth="150" style="-fx-background-color: #d3d3d3;">
            <padding>
                <Insets top="10" left="10" right="10" bottom="10"/>
            </padding>
            <Button text="Logo" prefWidth="130"/>
            <Button fx:id="btnUsuarios" text="Usuarios" prefWidth="130"/>
            <Button fx:id="btnSala1" text="Sala 1" prefWidth="130"/>
            <Button fx:id="btnSala2" text="Sala 2" prefWidth="130"/>
            <Button fx:id="btnSala3" text="Sala 3" prefWidth="130"/>
            <Button fx:id="btnAgregarSala" text="+ Sala" prefWidth="130"/>
            <Button fx:id="btnAgregarAdmin" text="Agregar Admin" prefWidth="130"/>
            <Button fx:id="btnSalir" text="Salir" prefWidth="130" style="-fx-background-color: #ff4d4d; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <!-- Panel principal -->
    <center>
        <VBox spacing="15" alignment="CENTER">
            <Label fx:id="lblTitulo" text="Panel de Administración" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <!-- Tabla -->
            <TableView fx:id="tablaDatos" prefWidth="500" prefHeight="300">
                <columns>
                     <TableColumn fx:id="col1" text="ID" />
        <TableColumn fx:id="col2" text="Nombre" />
        <TableColumn fx:id="col3" text="Apellido" />
        <TableColumn fx:id="col4" text="Correo" />
        <TableColumn fx:id="col5" text="Rol" />
        <TableColumn fx:id="col6" text="Edad" />
        <TableColumn fx:id="col7" text="Fecha Creación" />
        <TableColumn fx:id="col8" text="Género" />
                    <TableColumn text="Acciones"/>
                </columns>
            </TableView>

            <!-- Botones -->
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnAgregar" text="Agregar"/>
                <Button fx:id="btnEditar" text="Editar"/>
                <Button fx:id="btnEliminar" text="Eliminar"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
